{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Department</h1>

    <table class="record_properties">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Mpk</th>
                <td>{{ entity.mpk }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ entity.name }}</td>
            </tr>
            <tr>
                <th>Squery</th>
                <td>{{ entity.squery }}</td>
            </tr>
            <tr>
                <th>Address</th>
                <td>{{ entity.address }}</td>
            </tr>
            <tr>
                <th>Created_at</th>
                <td>{{ entity.createdat|date('Y-m-d H:i:s') }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ entity.description }}</td>
            </tr>
            <tr>
                <th>Coordinates</th>
                <td>{{ entity.coordinates }}</td>
            </tr>
            <tr>
                <th>Organization_id</th>
                <td>{{ entity.organizationid }}</td>
            </tr>
            <tr>
                <th>City_id</th>
                <td>{{ entity.cityid }}</td>
            </tr>
        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a href="{{ path('department') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('department_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>{{ form(delete_form) }}</li>
</ul>
{% endblock %}
